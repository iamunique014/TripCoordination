@model TripCoordination.Common.ViewModel.CreateRouteViewModel

@{
    ViewData["Title"] = "Create Route";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-title p-3 mt-3 label-control">
    <h3>Create New Route</h3>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger d-flex alert-container-lose alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        <div>
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
}

<div class="form-container p-3">
    <form asp-action="CreateRoute" method="post">

        <div class="mb-3">
            <label asp-for="Description" class="label-control">Route Description</label>
            <input asp-for="Description" type="text" class="input-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="FromLocation" class="label-control">From</label>
            <input asp-for="FromLocation" type="text" class="input-control" />
            <span asp-validation-for="FromLocation" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ToLocation" class="label-control">To</label>
            <input asp-for="ToLocation" type="text" class="input-control" />
            <span asp-validation-for="ToLocation" class="text-danger"></span>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary w-50">Create Route</button>
        </div>

    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}