@model TripCoordination.Common.ViewModel.RouteRequestViewModel

<div class="page-title p-3 mt-3 label-control">
    <h3>Create New Route Request</h3>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger d-flex alert-conatiner-lose alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        <div>
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
}

<div class="form-container p-3">

    <form asp-action="createRouteRequest" method="post">

        <div class="mb-3">
            <label asp-for="FromLocation" class="label-control">From</label>
            <input asp-for="FromLocation" type="text" class="input-control" />
            <span class="text-danger" asp-validation-for="FromLocation"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ToLocation" class="label-control">To</label>
            <input asp-for="ToLocation" type="text" class="input-control" />
            <span class="text-danger" asp-validation-for="ToLocation"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Reason" class="label-control">Reason</label>
            <textarea asp-for="Reason" class="input-control" rows="3"></textarea>
            <span class="text-danger" asp-validation-for="Reason"></span>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary w-50">Submit</button>
        </div>

    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}