@model TripCoordination.ViewModel.TripListingViewModelUI
@{
    ViewData["Title"] = "Home";
}
<div class="container">

    <div class="jumbotron text-center form-container py-3 rounded">
        <h1 class="display-4 label-control">Welcome to Trip Coordination</h1>
        <p class="lead label-control">Plan your trips with ease and join trips organized by fellow travelers.</p>
        <img src="~/images/Toyata-quantum-face-rigt.png" alt="Trip Coordination Banner" class="img-fluid my-3" style="max-height: 350px;">

        <!-- Search Form -->
        <form class="row g-3 justify-content-center align-items-end" method="post" asp-controller="Trip" asp-action="TripListing">
            
                <div class="col-md-3">
                    <label class="label-control">Pickup Location</label>
                    <input asp-for="PickUpLocation" type="text" class="input-control" placeholder="Pickup Location" />
                </div>

                <div class="col-md-3">
                    <label class="label-control">Destination</label>
                    <select asp-for="DestinationID" class="input-control">
                        @foreach (var town in Model.AvailableTowns)
                        {
                            <option value="@town.Value">@town.Text</option>
                        }
                    </select>
                    <span class="text-danger"></span>
                </div>

                <div class="col-md-3">
                    <label class="label-control">Departure Date</label>
                    <input asp-for="DepartureDate" type="date" class="input-control" />
                </div>
            
           
            <div class="col-12 mt-3">
                <button type="submit" class="btn btn-primary w-50">Find a Trip</button>
            </div>
        </form>
    </div>

</div>


