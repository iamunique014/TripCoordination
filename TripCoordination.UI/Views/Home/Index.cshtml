@model TripCoordination.ViewModel.TripListingViewModelUI
@{
    ViewData["Title"] = "Home";
}
<div class="container">

    <div class="jumbotron text-center bg-light py-5 rounded">
        <h1 class="display-4">Welcome to Trip Coordination</h1>
        <p class="lead">Plan your trips with ease and join trips organized by fellow travelers.</p>
        <img src="~/images/Toyata-quantum-face-rigt.png" alt="Trip Coordination Banner" class="img-fluid my-4" style="max-height: 400px;">

        <!-- Search Form -->
        <form class="row g-3 justify-content-center" method="post" asp-controller="Trip" asp-action="TripListing">
            <div class="col-md-3">
                <label class="control-label">Pickup Location</label>
                <input asp-for="PickUpLocation" type="text" class="form-control" placeholder="Pickup Location" />
            </div>

            <div class="col-md-2">
                <label class="control-label">Destination</label>
                <select asp-for="DestinationID" class="form-control">
                    @foreach (var town in Model.AvailableTowns)
                    {
                        <option value="@town.Value">@town.Text</option>
                    }
                </select>
                <span class="text-danger"></span>
            </div>

            <div class="col-md-2">
                <label class="control-label">Departure Date</label>
                <input asp-for="DepartureDate" type="date" class="form-control" />
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">Find a Trip</button>
            </div>
        </form>
    </div>

</div>


