@model IEnumerable<TripCoordination.Data.Models.Domain.Town>
@{
    ViewData["Title"] = "Manage Trips";
}


<div class="container mt-5">
    <h1>List of Towns</h1>


    <div class="my-2">
        @* <a href="/Person/Add" class="btn btn-info my-2">Add more</a> *@

        <a asp-action="CreateTown" class="btn btn-info my-2">Add more</a>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Name</th>
                    <th>Region</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var town in Model)
                {
                    <tr>
                        <td>@town.TownID</td>
                        <td>@town.Name</td>
                        <td>@town.Region</td>
                        <td>
                            <a href="/Admin/EditTown?townID=@town.TownID" class="btn btn-success">Edit</a>
                            <a href="/Admin/DeleteTown?townID=@town.TownID" class="btn btn-danger" onclick="return window.confirm('Are you sure to delete this record?')">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div> 
