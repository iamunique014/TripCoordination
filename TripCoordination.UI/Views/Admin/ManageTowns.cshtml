@model IEnumerable<TripCoordination.Data.Models.Domain.Town>
@{
    ViewData["Title"] = "Manage Trips";
}

<div class="page-title p-3 mt-3 label-control">
    <h3>All Towns</h3>
</div>


<div class="form-container p-3 label-control">
    
       <div class="text-end">
            <a asp-action="CreateTown" class="btn btn-primary my-2">Create new town</a>
       </div>
       
       <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Region</th>
                        <th>Price</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var town in Model)
                    {
                        <tr>
                            <td>@town.Name</td>
                            <td>@town.Region</td>
                            <td>@town.Price</td>
                           @*  <td>
                                <a href="/Admin/EditTown?townID=@town.TownID" class="btn btn-success">Edit</a>
                                <a href="/Admin/DeleteTown?townID=@town.TownID" class="btn btn-danger" onclick="return window.confirm('Are you sure to delete this record?')">Delete</a>
                            </td> *@
                        <td>
                            <div class="dropdown">
                                <button class="btn btn-sm btn-primary w-100 dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                    Actions
                                </button>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" href="/Admin/EditTown?townID=@town.TownID">
                                            Edit
                                        </a>
                                    </li>
                                   
                                    <li>
                                        <form method="post" action="/Admin/DeleteTown" onsubmit="return confirm('Are you sure to delete this record?')">
                                            <input type="hidden" name="townID" value="@town.TownID" />
                                            <button type="submit" class="dropdown-item text-danger">Delete</button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        </td>
                        </tr>
                    }
                </tbody>
            </table>
       </div>
</div> 
