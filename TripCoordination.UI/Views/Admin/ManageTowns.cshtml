@model IEnumerable<TripCoordination.Data.Models.Domain.Trip>
@{
    ViewData["Title"] = "Manage Trips";
}

<div class="container">
    <h1>List of trips</h1>


    <div class="my-2">
        @* <a href="/Person/Add" class="btn btn-info my-2">Add more</a> *@

        <a asp-action="Add" class="btn btn-info my-2">Add more</a>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Creator</th>
                    <th>Depature Date</th>
                    <th>Isfull</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var trip in Model)
                {
                    <tr>
                        <td>@trip.TripID</td>
                        <td>@trip.CreatorUserId</td>
                        <td>@trip.DepartureDate</td>
                        <td>@trip.IsFull</td>
                        <td>
                            <a href="/Person/Edit?id=@trip.TripID" class="btn btn-success">Edit</a>
                            <a href="/Person/Delete?id=@trip.TripID" class="btn btn-danger" onclick="return window.confirm('Are you sure to delete this record?')">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
