@model TripCoordination.Common.ViewModel.AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="page-title p-3 mb-4">
    <h3>Welcome to Your Dashboard</h3>

    <!-- Quick Action Buttons -->
    <div class="row mt-4">
        <div class="col-md-3 col-sm-6 mb-2">
            <a href="/User/ViewUsers" class="btn btn-outline-primary w-100">
                <i class="bi bi-search"></i> Manage Users
            </a>
        </div>
        <div class="col-md-3 col-sm-6 mb-2">
            <a href="/Admin/ManageTrips" class="btn btn-outline-primary w-100">
                <i class="bi bi-list-check"></i> View All Trips
            </a>
        </div>
        <div class="col-md-3 col-sm-6 mb-2">
            <a href="/TripRequest/ViewRequest" class="btn btn-outline-primary w-100">
                <i class="bi bi-plus-circle"></i> Trip Requests
            </a>
        </div>
        <div class="col-md-3 col-sm-6 mb-2">
            <a href="/RouteRequest/ViewRouteRequests" class="btn btn-outline-primary w-100">
                <i class="bi bi-plus-circle"></i> Route Requests
            </a>
        </div>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success  d-flex alert-container-win alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i>
        <div>
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
}
else if (TempData["Error"] != null)
{
    <div class="alert alert-danger  d-flex alert-container-lose alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i>
        <div>
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
}


@if (TempData["Info"] != null)
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle me-2"></i>
        @TempData["Info"]
    </div>
}
else
{
    <div class="row">

        <!--Left Column-->
        <div class="col-lg-8">

            @* User Stats *@
            <div class="row">

                <div class="col-lg-6 col-sm-6">

                    <div class="container-content mb-4">
                        <div class="content-wrapper p-3 border-primary">
                            <div class="">
                                <h5 class="card-title">Total Users</h5>
                                <p class="card-text fs-4">@Model.UserStats.TotalUsers</p>
                            </div>
                        </div>
                    </div>
                    
                </div>

                <div class="col-lg-6 col-sm-6">

                    <div class="container-content mb-4">
                        <div class="content-wrapper p-3 border-success">
                            <div class="content-body">
                                <h5 class="card-title">Active Organizers</h5>
                                <p class="card-text fs-4">@Model.UserStats.ActiveOrganizers</p>
                            </div>
                        </div>
                    </div>
                   
                </div>


                <div class="col-lg-6 col-sm-6">

                    <div class="container-content mb-4">
                        <div class="content-wrapper p-3 border-danger">
                            <div class="">
                                <h5 class="card-title">Blocked Users</h5>
                                <p class="card-text fs-4">@Model.UserStats.BlockedUsers</p>
                            </div>
                        </div>
                    </div>
                   
                </div>

                <div class="col-lg-6 col-sm-6">

                    <div class="container-content mb-4">
                        <div class="content-wrapper p-3 border-info">
                            <div class="">
                                <h5 class="card-title">New This Month</h5>
                                <p class="card-text fs-4">@Model.UserStats.NewUsersThisMonth</p>
                            </div>
                        </div>
                    </div>
                   
                </div>
                

                @* Recent Activity summary *@
                <div class="col-xl-12">
                    
                    <div class="container-content mb-4">
                        <div class="container-header mb-2">Recent Activities</div>
                        <table class="table table-striped table-hover mb-0" id="recentActivity">
                            <thead>
                                <tr>
                                    <th>Type</th>
                                    <th>Description</th>
                                    <th>Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.RecentActivities != null && Model.RecentActivities.Any())
                                {
                                    foreach (var activity in Model.RecentActivities)
                                    {
                                        <tr>
                                            <td>@activity.ActivityType</td>
                                            <td>@activity.Description</td>
                                            <td>@activity.ActivityDate.ToString("dd MMM yyyy")</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="3" class="text-center text-muted">No recent activity available.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!--Start Right Column-->
        <div class="col-lg-4">

            <!--User Role Chart Distribution-->
            <div class="chart-container container-content mb-4">
                <h4>User Roles Distribution</h4>
                <canvas id="userRoleChart" height="150"></canvas>
            </div>

            <!-- Trip Stats -->
            <div class="container-content mb-4">
                @if (Model.TripStats != null)
                {
                    <div class="content-wrapper mb-3">
                        <div class="card-body">
                            <h5 class="card-title">Total Trips</h5>
                            <p class="card-text fs-4">@Model.TripStats.TotalTrips</p>
                        </div>
                    </div>

                    <div class="content-wrapper mb-3">
                        <div class="card-body">
                            <h5 class="card-title">Upcoming Trips (Next 7 Days)</h5>
                            <p class="card-text fs-4">@Model.TripStats.UpcomingTrips</p>
                        </div>         
                    </div>                   
                }
                else
                {
                    <p class="text-muted">No trip stats.</p>
                }

            </div>

            <!--Trips Created Bargraph-->
             <div class="container-content mb-4">
                 <div class="container-header mb-2">
                      Trips Created This Year
                 </div>
                 <div class="card-body">
                      @await Html.PartialAsync("~/Views/Shared/Charts/_ChartPartial.cshtml", "tripsCreatedChart")
                 </div>
             </div>

        </div>
       
    </div>

}

@section Scripts {
    <script>
        setupDataTable('#recentActivity');
    </script>
   
    <script>
        const roleCtx = document.getElementById('userRoleChart').getContext('2d');
        const roleData = @Html.Raw(Model.UserRolesChartJson);

        new Chart(roleCtx, {
            type: 'pie',
            data: {
                labels: roleData.labels,
                datasets: [{
                    label: 'Users by Role',
                    data: roleData.data,
                    backgroundColor: [
                        '#4e73df', '#1cc88a', '#36b9cc'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'bottom'
                    },
                    tooltip: {
                        enabled: true
                    }
                }
            }
        });
    </script>

    <script src="~/js/admin-dashboard-charts.js"></script>
}

