@model IEnumerable<TripCoordination.Common.ViewModel.TripViewModel>
@{
    ViewData["Title"] = "Manage Trips";
}

<div class="page-title p-3 mt-3 label-control">
    <h3>All Trips</h3>
</div>



<div class="form-container p-3 label-control">

    <table class="table table-stripped">
        <thead>
            <tr>
                <th>Creator</th>
                <th>Depature Date</th>
                <th>Seats</th>
                <th>IsFull</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var trip in Model)
            {
                <tr>
                    @* <td>@trip.TripID</td>  *@
                    <td>@trip.CreatorName @trip.CreatorSurname</td>
                    <td>@trip.DepartureDate</td>
                    <td>@trip.Seats</td>
                    <td>@(trip.IsFull ? "Yes" : "No")</td>
                    <td>
                        <a href="/Admin/TripWithDestinations?tripID=@trip.TripID" class="btn btn-success">Edit</a>
                        <a href="/TripParticipant/ViewParticipants?tripID=@trip.TripID" class="btn btn-warning">View Participants</a>
                        <a href="/Trip/DeleteTrip?id=@trip.TripID" class="btn btn-danger" onclick="return window.confirm('Are you sure to delete this record?')">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>


























