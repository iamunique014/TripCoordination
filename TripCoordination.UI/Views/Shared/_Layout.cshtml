<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TripCoordination</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TripCoordination.styles.css" asp-append-version="true" />
    <style>
        /* section {
            padding: 60px 0;
        } */
    </style>
</head>
<body class="min-vh-100">
    <header>
        <!--NavBar-->
        <nav class="navbar  navbar-expand-lg navbar-light">
            <div class="container-fluid">
                <a asp-action="Index" asp-controller="Home" class="navbar-brand">
                    <span class="fw-bold text-secondary">
                        UniTrips
                    </span>
                </a>

                <!--Tottle button for mobile nav-->
                <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#main-nav"
                        aria-controls="main-nav" aria-expanded="false" aria-label="toggle-navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <!--Nav links-->
                <div class="collapse navbar-collapse justify-content-end align-items-center" id="main-nav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="#topics">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#reviews">Towns</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="DisplayAll" asp-controller="Admin">Residence</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#contact">Contact</a>
                        </li>
                        <li class="nav-item ms-2 d-none d-md-inline">
                            <a class="btn btn-secondary" asp-action="SignUp" asp-controller="Home">Sign Up</a>
                        </li>
                        <li class="nav-item ms-2 d-none d-md-inline">
                            <a class="btn btn-secondary" asp-action="Login" asp-controller="Home">Login</a>
                        </li>
                    </ul>

                </div>
            </div>
        </nav>
    </header>


    <div class="container-fluid min-vh-100">
        <div class="row">
            @if (ViewData["ShowSidebar"] != null && (bool)ViewData["ShowSidebar"])
            {
                <div class="col-md-2">
                    @await Html.PartialAsync("_Sidebar")
                </div>
                <div class="col-md-10">
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>
            }
            else
            {
                <main role="main">
                    @RenderBody()
                </main>
            }
        </div>
       
    </div>

    <footer class="border-top footer  text-muted">
        <div class="container">
            &copy; 2024 - TripCoordination - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
