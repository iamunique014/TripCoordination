@model TripCoordination.ViewModel.TripDetailsViewModelUI
@{
    ViewData["Title"] = "Trip Details";
}

<div class="page-title p-3 label-control">
    <h3>Confirm Trip Details</h3>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger d-flex alert-container-lose alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        <div>
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
}

<div class="trip-details form-container mb-3">
    <p><strong>Date:</strong> @Model.DepartureDate.ToString("f")</p>
    <p><strong>Destination:</strong> @Model.DestinationName</p>
    <p><strong>Available Seats:</strong> @Model.Seats</p>
    <p><strong>Organizer:</strong> @Model.CreatorFirstName @Model.CreatorLastName</p>
</div>

<div class="form-container p-3">
    <form asp-action="JoinTrip" method="post">

        <input type="hidden" asp-for="TripID" class="form-control" />
        <input type="hidden" asp-for="TownID" class="form-control" />

        <div class="mb-3">
            <label asp-for="JoiningFirstName" class="label-control">First Name</label>
            <input asp-for="JoiningFirstName" class="input-control" />
            <span asp-validation-for="JoiningFirstName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="JoiningLastName" class="label-control">Last Name</label>
            <input asp-for="JoiningLastName" class="input-control" />
            <span asp-validation-for="JoiningLastName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="PickUpPoint" class="label-control">PickUp Location</label>
            <input asp-for="PickUpPoint" class="input-control" />
            <span asp-validation-for="PickUpPoint" class="text-danger"></span>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary w-50">Join Trip</button>
        </div>
    </form>
</div>


