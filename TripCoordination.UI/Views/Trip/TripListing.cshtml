@model IEnumerable<TripCoordination.ViewModel.TripListingViewModelUI>
@{
    ViewData["Title"] = "Available Trips";
}

@if (!Model.Any())
{
    <div class="alert alert-info">
        No trips available at the moment. Please check back later.
    </div>
}
else
{

    <div class="row justify-content-center">
        @foreach (var tripListing in Model)
        {
            <div class="col-md-10 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">Organizer: @tripListing.Name </h5>
                        <p class="card-text">
                            <strong>Date: </strong>@tripListing.DepartureDate.ToLongDateString()<br />
                            <strong>Destination: </strong>@tripListing.DestinationName <br />
                            <strong>Seats Available: @tripListing.Seats</strong>
                        </p>
                    </div>
                    <div class="card-footer text-center">
                        <a asp-controller="Trip" asp-action="TripDetails"  class="btn btn-primary">Join Trip</a>
                    </div>
                </div>
            </div>
        }
    </div>
}