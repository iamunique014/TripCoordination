@model TripCoordination.ViewModel.CreateTripViewModelUI
@{
    ViewData["Title"] = "Create Trip";
}
<div class="mt-5">
    <h2>Create a New Trip</h2>

    <form asp-action="CreateTrip" method="post" class="needs-validation" novalidate>
        <div class="mb-3 form-group col-md-2">
            <label asp-for="DepartureDate" class="form-label">Departure Date</label>
            <input asp-for="DepartureDate" class="form-control" type="datetime-local" step="60" />
            <span asp-validation-for="DepartureDate" class="text-danger"></span>
        </div>

        <!-- Select2 Multi-select for Towns -->
        <div class="mb-3 form-group col-md-4">
            <label for="SelectedTownIds" class="form-label">Select Drop-Off Locations</label>
            <select asp-for="SelectedTownIds" id="SelectedTownIds" name="SelectedTownIds" class="form-select" multiple="multiple" style="width:100%;">
                @foreach (var town in Model.AvailableTowns)
                {
                    <option value="@town.Value">@town.Text</option>
                }
            </select>
            <span asp-validation-for="SelectedTownIds" class="text-danger"></span>
        </div>

        <div class="mb-3 d-block form-group">
            <label asp-for="Seats" class="form-label">Seats</label>
            <input asp-for="Seats" type="number" class="text-center" />
            <span asp-validation-for="Seats" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Create Trip</button>
    </form>
</div>




@section Scripts {
    <script>
        $(document).ready(function () {
            // Initialize Select2 on the multi-select element
            $('#SelectedTownIds').select2({
                placeholder: "Select drop-off locations",
                allowClear: true
            });
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
